{
  "pluginAlias": "HLSmartControl",
  "pluginType": "accessory",
  "singular": false,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "HeliaLux SmartControl"
      },
      "debug": {
        "title": "Debug",
        "type": "boolean",
        "required": false,
        "default": false
      },
      "color": {
        "title": "Enable color",
        "type": "boolean",
        "required": false,
        "default": false
      },
      "timeout": {
        "title": "Timeout",
        "type": "number",
        "required": false,
        "default": 1000
      },
      "host": {
        "title": "Host",
        "type": "string",
        "required": true
      },
      "port": {
        "title": "Port",
        "type": "number",
        "required": false,
        "default": 80
      }
    }
  }
}